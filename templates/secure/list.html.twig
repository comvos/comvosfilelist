{{ includeStylesheet('/typo3conf/ext/comvosfilelist/templates/css/comvosfilelist-default.css') }}

{% if filelist.count == 0 %}
    {{ 'Keine Einträge gefunden'|t3trans('noentries') }}
{% else %}
    {{ filelist.count }} Dateien
{% endif %}
    
{% spaceless %}

    {% for file in filelist.files %}
            {% set  singleViewLink = typolink(conf.singlePageId,{'additionalParams':'&tx_comvosfilelist_pi1[action]=show&tx_comvosfilelist_pi1[file]=' ~ file|t3webpath|t3crypt }) %}
            {% set  downloadLink = file|t3webpath %}
            <div class="filelist-element">
                <table>
                    <tr>
		    <td class="thumb">
                            <div>
                                {% if file.extension in ['pdf','jpg','gif'] %}
                                {% set thumb = previewImage(file.realpath,{ 'folder' : 'comvosfilelist/' ~ pageid,'height': 100,'width':70 }) %}
                                {% set bigPreview = previewImage(file.realpath,{ 'folder' : 'comvosfilelist/' ~ pageid,'height': '','width': 400 }) %}    
                                    {% if thumb %}
                                    <span class="tx-mmdamfilelist-pi1-image tx-mmdamfilelist-pi1-image-0">
                                    <a href="{{ bigPreview|t3securefile }}" target="_blank">
                                        <img src="{{ thumb|t3securefile }}" alt="{{ file.meta.title }}" title="{{ file.meta.title }}">
                                        </a>
                                    <br>
                                    </span>
                                   
                                    {% endif %}

                                {% else %}

                                {% endif %}
                                
                                
                            </div>
		    
                    </td>
                    <td>
                        <div class="ff-fix-wrapper">

                        <a href="{{ singleViewLink }}" class="filetitle filetype-{{ file.extension }}">
                            {%- if conf.useDAM -%}
                                     {{- file.meta.title -}}
                            {%- else -%}
                                     {{- file.filename -}}
                            {%- endif -%}
                        </a>


                        <span class="fileinfo">
                            ({{ file.extension }}: 
                            {% if file.size > 1024 -%}            
                                {{ (file.size // 1024)|number_format(0,',','.') }} KB)
                            {%- else -%}
                                {{ file.size|number_format(0,',','.') }} B) 
                            {%- endif -%}
                        </span>

                        <a class="downloadlink" href="{{ downloadLink|t3securefile }}">Download</a>

                        {%- if conf.useDAM -%}
                        <div class="description">                            
                            {{ file.meta.description }}
                        </div>
                        {% endif %}

                    </div>
                    </td>
                    </tr>
               
               </table>
            </div>
    {% endfor %}

{% endspaceless %}


{% if filelist.lastpage > 1 %}
<div class="pager">
    {% if filelist.page > 1 %}
        <a href="{{ typolink(conf.listPageId,{"additionalParams":"&tx_comvosfilelist_pi1[page]=" ~ (filelist.page-1)}) }}" >Zurück</a>
    {% endif %}

    {% for i in range(1, filelist.lastpage) %}
        <a href="{{ typolink(conf.listPageId,{"additionalParams":"&tx_comvosfilelist_pi1[page]=" ~ i}) }}"
           {% if page == i %}
                class="selected"
           {% endif %}
           >{{ i }}</a>
    {% endfor %}


    {% if filelist.page < filelist.lastpage %}
        <a href="{{ typolink(conf.listPageId,{"additionalParams":"&tx_comvosfilelist_pi1[page]=" ~ (filelist.page+1)}) }}" >Vor</a>
    {% endif %}
    
</div>
{% endif %}

